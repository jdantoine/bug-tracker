@model BugTracker.Models.EmailViewModel
@{
    Layout = "~/Views/Shared/_AnonLayout.cshtml";
}
<br />
<br />
<div class="centerRLCo">
    <div class="login-wrap animated fadeInDownBig">
        @*<div class="col-md-offset-8 col-md-3 full-content-small animated fadeInDownBig">*@

        <h2 class="text-center welcome-title"><strong>Get</strong> In Touch</h2>
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { role = "form" }))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group login-input">
                <i class="fa fa-user overlay"></i>
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control text-input", @placeholder = "Your Name", autofocus = true })
            </div>                    
                    <div class="form-group login-input">
                        <i class="fa fa-envelope overlay"></i>
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control text-input", @placeholder = "Your Email" })
                    </div>
                    <div class="form-group login-input">
                        <i class="fa fa-user overlay"></i>
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control text-input", @placeholder = "Subject" })
                    </div>
                    <div class="form-group login-input">
                        <i class="fa fa-user overlay"></i>
                        @Html.TextAreaFor(m => m.Body,  new { @style = "height: 200px;", @class = "form-control text-input", @placeholder = "Enter Message" })
                    </div>
                    
                    
                    <div class="form-group login-input">
                        <button type="submit" class="btn btn-warning btn-block"><i class="fa fa-user"></i> Send Message</button>
                        
                    </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
