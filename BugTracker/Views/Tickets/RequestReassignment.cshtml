@model BugTracker.Models.Ticket
@{
    ViewBag.Title = "RequestReassignment";
}

<div class="col-md-6 col-md-offset-3">
    <div class="box-info shadow">
        <h2><strong>Request Reassignment</strong> for @Model.Name</h2>
        <div class="box-content">
            @using (Html.BeginForm("RequestReassignment", "Tickets"))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="id" value="@Model.Id" />
                <div class="form-group">
                    <textarea name="request" id="request" class="form-control" placeholder="Please give a detailed reason for this request."></textarea>
                    <div class="pull-right">
                        <input type="submit" class="btn-pad btn btn-warning" value="Send Request" />
                        <a class="cancel btn btn-warning">Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

